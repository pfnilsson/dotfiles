# font & font size
font-family = Meslo
font-size = 21
font-thicken = true

# disable all ligatures
font-feature = -liga
font-feature = -calt
font-feature = -dlig

# set theme
theme = catppuccin-mocha

# set color space
window-colorspace = display-p3

# disable animations
quick-terminal-animation-duration = 0

# set f12 as quick terminal keybind
keybind = global:f12=toggle_quick_terminal

# make quick terminal sticky
quick-terminal-autohide = false
